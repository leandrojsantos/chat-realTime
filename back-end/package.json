{
  "name": "chat-backend",
  "version": "2.0.0",
  "description": "Chat em tempo real - Backend com Clean Architecture",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "security:audit": "yarn audit",
    "security:scan": "snyk test",
    "security:monitor": "snyk monitor",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t chat-backend .",
    "docker:run": "docker run -p 3001:3001 chat-backend",
    "metrics": "node -e \"console.log('Metrics endpoint available at /metrics')\"",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "install:clean": "yarn install --frozen-lockfile",
    "upgrade": "yarn upgrade-interactive --latest",
    "check": "yarn install --check-files"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "mongoose": "^8.0.3",
    "redis": "^4.6.12",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "winston": "^3.11.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "prom-client": "^15.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "snyk": "^1.1248.0",
    "@types/jest": "^29.5.8",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test && yarn lint"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "chat",
    "realtime",
    "websocket",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "clean-architecture",
    "ddd",
    "typescript",
    "jest",
    "docker",
    "ci-cd"
  ],
  "author": "Equipe de Desenvolvimento",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/chat-realTime.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/chat-realTime/issues"
  },
  "homepage": "https://github.com/seu-usuario/chat-realTime#readme"
}